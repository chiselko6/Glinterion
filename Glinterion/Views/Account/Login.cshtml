@model MvcAuction.ViewModels.LoginViewModel

@{
	ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
	<div class="form-group">
		@Html.LabelFor(m => m.Email)
		@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email..." } })
		@Html.ValidationMessageFor(u => u.Email)
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Password)
				@Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password..." } })
				@Html.ValidationMessageFor(u => u.Password)
	</div>

	<div class="checkbox">
		@Html.EditorFor(m => m.RememberMe, new { htmlAttributes = new { @class = "checkbox" } })
		@Html.LabelFor(m => m.RememberMe)
	</div>

	<button type="submit" class="btn btn-primary">Login</button>
}
